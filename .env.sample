# MageMines Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.8

# Game Configuration
GAME_SEED=random
DEBUG_MODE=false
LOG_LEVEL=INFO

# Performance Settings
MAX_ENTITIES=100
# Maximum time to resolve a turn (in milliseconds)
TURN_RESOLUTION_TARGET_MS=100
# Whether to auto-advance turns (for watching AI play)
AUTO_ADVANCE_TURNS=false

# UI Settings
MESSAGE_HISTORY_SIZE=1000
COLOR_MODE=rgb
TERMINAL_WIDTH=80
TERMINAL_HEIGHT=24